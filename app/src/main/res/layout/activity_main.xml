<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="4084084084084081"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="11"
        app:layout_constraintEnd_toEndOf="@+id/edt_card_number"
        app:layout_constraintStart_toStartOf="@+id/edt_card_number"
        app:layout_constraintTop_toBottomOf="@+id/edt_card_number" />

    <EditText
        android:id="@+id/edt_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2020"
        app:layout_constraintEnd_toEndOf="@+id/edt_month"
        app:layout_constraintStart_toStartOf="@+id/edt_month"
        app:layout_constraintTop_toBottomOf="@+id/edt_month" />

    <EditText
        android:id="@+id/edt_cvv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="408"
        app:layout_constraintEnd_toEndOf="@+id/edt_year"
        app:layout_constraintStart_toStartOf="@+id/edt_year"
        app:layout_constraintTop_toBottomOf="@+id/edt_year" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pay now"
        app:layout_constraintEnd_toEndOf="@+id/edt_cvv"
        app:layout_constraintStart_toStartOf="@+id/edt_cvv"
        app:layout_constraintTop_toBottomOf="@+id/edt_cvv" />

</androidx.constraintlayout.widget.ConstraintLayout>